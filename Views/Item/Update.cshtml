@{
}
@{
    ViewData["Title"] = "Update";
}
    @section css {
    <link href="@Url.Content("~/css/UpdateCss.css")" rel="stylesheet"/>
}

@model ElectronicsStore.Models.UpdateItemModel





        <main>
  <div class="form-wrapper">
    <div class="title-wrap">
      <p class="title">Update Product</p>
    </div>
    <form action="/Item/Update" method="post" enctype="multipart/form-data">
      <div class="form-group-wrap">

        <div class="form-group one">
          <div class="input-container">
            <span>ID</span>
            <input type="text" name="ItemId" placeholder="Item ID" asp-for="ItemId"  readonly>
          </div>
    
          <div class="input-container">
            <span>Upload image</span>
            <input style="padding-top: 8px;" type="file" name="ImageFile" placeholder="upload image" accept="image/*" asp-for="ItemImage">
          </div>
    
          <div class="input-container">
            <span>name</span>
            <input type="text" name="ItemName" placeholder="enter name" asp-for="ItemName">
          </div>
    
          <div class="input-container">
            <span>status</span>
            <input type="text" name="ItemStatus" placeholder="enter Status" asp-for="ItemStatus">
          </div>
    
          <div class="input-container">
            <span>description</span>
            <input type="text" name="ItemDescription" placeholder="enter Description" asp-for="ItemDescription">
          </div>
        </div>
    
        <div class="form-group two">
          <div class="input-container">
            <span>condition</span>
            <input type="text" name="Condition" placeholder="enter Condition" asp-for="Condition">
          </div>
    
          <div class="input-container">
            <span>amount</span>
            <input type="number" name="Amount" placeholder="enter Amount" asp-for="Amount">
          </div>
    
          <div class="input-container">
            <span>unit price</span>
            <input type="text" name="PricePerItem" placeholder="enter unit price" asp-for="PricePerItem">
          </div>
    
          <div class="input-container">
            <span>brand</span>
            <input type="text" name="brand" placeholder="enter brand" asp-for="brand">
          </div>
    
          <div class="input-container">
            <span>email</span>
            <input type="email" name="SellerEmail" placeholder="enter Seller Email" asp-for="SellerEmail">
          </div>

        </div>
      </div>

      <div class="input-container">
        <span>number</span>
        <input  style="width: 100%;" type="number" name="SellerPhonenumber" placeholder="enter Seller Phone number" asp-for="SellerPhonenumber">
      </div>

      <div class="edit-btns">
        <button type="submit" class="update-btn">update</button>
        <button class="cancel-btn"><a href="/Item/Index">Cancel</a></button>
      </div>
      </form>
</main>